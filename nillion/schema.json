{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Proof of Thought",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid"
      },
      "title": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "ipfsHash": {
        "type": "string"
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "content": {
        "type": "object",
        "properties": {
          "$allot": {
            "type": "string"
          }
        }
      }
    },
    "required": [
      "_id",
      "title",
      "description",
      "ipfsHash",
      "categories",
      "content"
    ],
    "additionalProperties": false
  }
}